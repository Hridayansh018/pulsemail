{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "gunicorn --bind 0.0.0.0:$PORT wsgi_simple:application",
    "healthcheckPath": "/admin/",
    "healthcheckTimeout": 600,
    "restartPolicyType": "ON_FAILURE"
  }
} 