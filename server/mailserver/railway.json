{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "PAKETO"
  },
  "deploy": {
    "startCommand": "cd server/mailserver && gunicorn --bind 0.0.0.0:$PORT mailserver.wsgi_simple:application",
    "healthcheckPath": "/admin/",
    "healthcheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE",
    "workingDirectory": "mailserver"
  }
} 